[Unit]
Description=USDJPY Assistant API (FastAPI)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=__APP_ROOT__
Environment=USDJPY_DATA_DIR=__APP_ROOT__/data
Environment=PORT=8000
ExecStart=__APP_ROOT__/.venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
